# =============================================================================
# Kooki API - Environment Variables
# =============================================================================

# App
NODE_ENV=development
API_PORT=4000
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Database (PostgreSQL)
DATABASE_URL=postgresql://postgres:password@localhost:5432/kooki?schema=public

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d

# Stripe
STRIPE_SECRET_KEY=sk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...
STRIPE_PUBLISHABLE_KEY=pk_test_...

# Redis (for BullMQ queues)
REDIS_URL=redis://localhost:6379

# S3 / Object Storage (for file uploads, tax receipts PDFs)
S3_ENDPOINT=
S3_REGION=eu-west-3
S3_BUCKET=kooki-uploads
S3_ACCESS_KEY_ID=
S3_SECRET_ACCESS_KEY=
